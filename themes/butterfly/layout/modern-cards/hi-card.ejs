<%# Hi Card - 个人介绍卡片 💡 显示头像、问候语和自我介绍 %>

    <div class="card-container modern-card hi-card hoverable" style="<%= getCardPosition('hiCard') %>">
        <!-- 💡 头像 -->
        <img src="<%= theme.avatar.img || '/img/avatar.png' %>" alt="<%= config.author %>" class="avatar" />

        <!-- 💡 问候语 -->
        <h1 class="greeting">
            <span id="greeting-text"></span><br />
            我是 <span class="username">
                <%= config.author || 'CJX' %>
            </span>,<br />
            欢迎来到我的博客!
        </h1>

        <!-- 💡 简短介绍 -->
        <% if (config.description) { %>
            <p style="margin-top: 1rem; color: var(--color-text-secondary); font-size: var(--font-size-sm);">
                <%= config.description %>
            </p>
            <% } %>
    </div>