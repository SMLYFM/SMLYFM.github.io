{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "hexo clean && hexo server --draft",
    "build": "hexo clean && hexo generate",
    "deploy": "bash tools/deploy.sh",
    "server": "hexo server",
    "clean": "hexo clean",
    "new": "bash tools/new-post.sh",
    "preview": "bash tools/preview.sh",
    "lint": "prettier --check '**/*.{md,yml,yaml,json}'",
    "format": "prettier --write '**/*.{md,yml,yaml,json}'",
    "lint:md": "markdownlint 'source/_posts/**/*.md' --fix",
    "prepare": "husky install"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "dependencies": {
    "@neilsustc/markdown-it-katex": "^1.0.0",
    "hexo": "^7.3.0",
    "hexo-admonition": "^1.1.2",
    "hexo-butterfly-extjs": "^1.5.4",
    "hexo-deployer-git": "^4.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-search": "^2.4.3",
    "hexo-generator-sitemap": "^3.0.1",
    "hexo-generator-tag": "^2.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-markdown-it": "^7.1.1",
    "hexo-renderer-pug": "^3.0.0",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "hexo-theme-butterfly": "^5.5.3",
    "hexo-wordcount": "^6.0.1"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.0.0"
  }
}
